{
    "name": "train_mr2ct_lr1e-4_nc1",
    "gpu_ids": [
        0,
        1,
        2,
        3
    ],
    "seed": -1,
    "finetune_norm": false,
    "path": {
        "base_dir": "experiments",
        "code": "code",
        "tb_logger": "tb_logger",
        "results": "results",
        "checkpoint": "checkpoint",
        "resume_state": null
    },
    "datasets": {
        "train": {
            "which_dataset": {
                "name": [
                    "data.dataset",
                    "MR2CTDataset"
                ],
                "args": {
                    "data_root": "./datasets/mr2ct_palette_nc1/train",
                    "data_flist": "./datasets/mr2ct_palette_nc1/train",
                    "data_len": -1
                }
            },
            "dataloader": {
                "validation_split": 8,
                "args": {
                    "batch_size": 4,
                    "num_workers": 4,
                    "shuffle": true,
                    "pin_memory": true,
                    "drop_last": true
                },
                "val_args": {
                    "batch_size": 1,
                    "num_workers": 4,
                    "shuffle": false,
                    "pin_memory": true,
                    "drop_last": false
                }
            }
        },
        "test": {
            "which_dataset": {
                "name": [
                    "data.dataset",
                    "MR2CTDataset"
                ],
                "args": {
                    "data_root": "./datasets/mr2ct_palette_nc1/test",
                    "data_flist": "./datasets/mr2ct_palette_nc1/test"
                }
            },
            "dataloader": {
                "args": {
                    "batch_size": 8,
                    "num_workers": 4,
                    "pin_memory": true
                }
            }
        },
        "val": {
            "which_dataset": {
                "name": [
                    "data.dataset",
                    "MR2CTDataset"
                ],
                "args": {
                    "data_root": "./datasets/mr2ct_palette_nc1/val",
                    "data_flist": "./datasets/mr2ct_palette_nc1/val"
                }
            },
            "dataloader": {
                "args": {
                    "batch_size": 1,
                    "num_workers": 4,
                    "pin_memory": true
                }
            }
        }
    },
    "model": {
        "which_model": {
            "name": [
                "models.model",
                "Palette"
            ],
            "args": {
                "sample_num": 8,
                "task": "mr2ct",
                "ema_scheduler": {
                    "ema_start": 1,
                    "ema_iter": 1,
                    "ema_decay": 0.9999
                },
                "optimizers": [
                    {
                        "lr": 0.0001,
                        "weight_decay": 0
                    }
                ]
            }
        },
        "which_networks": [
            {
                "name": [
                    "models.network",
                    "Network"
                ],
                "args": {
                    "init_type": "kaiming",
                    "module_name": "guided_diffusion",
                    "unet": {
                        "in_channel": 2,
                        "out_channel": 1,
                        "inner_channel": 64,
                        "channel_mults": [
                            1,
                            2,
                            4,
                            8
                        ],
                        "attn_res": [
                            16
                        ],
                        "num_head_channels": 32,
                        "res_blocks": 2,
                        "dropout": 0.2,
                        "image_size": 224
                    },
                    "beta_schedule": {
                        "train": {
                            "schedule": "linear",
                            "n_timestep": 2000,
                            "linear_start": 1e-06,
                            "linear_end": 0.01
                        },
                        "test": {
                            "schedule": "linear",
                            "n_timestep": 1000,
                            "linear_start": 0.0001,
                            "linear_end": 0.09
                        }
                    }
                }
            }
        ],
        "which_losses": [
            {
                "name": "mse_loss"
            }
        ],
        "which_metrics": [
            {
                "name": "mae"
            },
            {
                "name": "mse"
            },
            {
                "name": "SSIM"
            },
            {
                "name": "PSNR"
            }
        ]
    },
    "train": {
        "n_epoch": 100000000.0,
        "n_iter": 100000000.0,
        "val_epoch": 1,
        "save_checkpoint_epoch": 5,
        "log_iter": 10000.0,
        "tensorboard": true
    },
    "debug": {
        "val_epoch": 1,
        "save_checkpoint_epoch": 1,
        "log_iter": 10,
        "debug_split": 50
    },
    "phase": "train",
    "distributed": true
}